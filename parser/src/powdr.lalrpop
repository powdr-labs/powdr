}

Product<StructOption>: Box<Expression> = {
    <start:@L> <left:Product<StructOption>> <op:ProductOp> <right:Power<StructOption>> <end:@R> => ctx.to_expr_with_source_ref(BinaryOperation { left, op, right }, start, end),
