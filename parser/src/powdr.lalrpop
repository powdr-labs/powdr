MachineParams: MachineParams = {
    => MachineParams::default(),
    "(" ")" => MachineParams::default(),
    <start:@L> "(" <mut list:( <Param> "," )*> <last:Param> ","? ")" <end:@R> =>? {
        list.push(last);
        Ok(MachineParams::try_from_params(ctx.source_ref(start, end), list)?)
